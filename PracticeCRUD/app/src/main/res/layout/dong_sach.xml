<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="24dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/textViewTenCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Ten Sach" />

            <TextView
                android:id="@+id/textViewNgayXBSach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Ngay XB Sach" />

            <TextView
                android:id="@+id/textViewTheLoaiSach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Thể loại Sách" />

            <TextView
                android:id="@+id/textViewTacgiaSach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Tác giả Sách" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_weight="1"
            android:src="@drawable/baseline_edit_24" />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_weight="1"
            android:src="@drawable/baseline_delete_24" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>