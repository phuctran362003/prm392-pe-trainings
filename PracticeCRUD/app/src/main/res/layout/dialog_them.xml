<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Sách"
        android:gravity="center"
        android:textColor="#f00"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextAddName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Tên Sách"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextAddDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddName"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ngày Xuất Bản"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextAddTheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddDate"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Thể loại"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerTacgiaSach"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/buttonAdd"
        android:text="Hủy" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerTacgiaSach"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="44dp"
        android:text="Thêm" />

    <Spinner
        android:id="@+id/spinnerTacgiaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddTheloai"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="0dp" />
</RelativeLayout>